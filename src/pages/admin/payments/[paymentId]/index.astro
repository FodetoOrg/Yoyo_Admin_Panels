
---
import { serverApiService, type ApiResponse } from "@/lib/utils/api";
import DashboardLayout from "../../../layouts/DashboardLayout.astro";
import PaymentDetailsScreen from "./_components/PaymentDetailsScreen";
import { CONSTANTS } from "@/lib/utils/constants";
import { UserRole } from "@/lib/utils/auth";

// Check if user has permission
const currentUser = Astro.locals.user;
if (!currentUser || (currentUser.role !== UserRole.SUPER_ADMIN && currentUser.role !== UserRole.HOTEL_ADMIN)) {
  return Astro.redirect('/admin/dashboard');
}

const paymentId = Astro.params.paymentId;

if (!paymentId) {
  return Astro.redirect('/admin/payments');
}

const paymentDetails: ApiResponse<any> = await serverApiService.get(
  `/api/v1/details/payments/${paymentId}`,
  Astro.cookies.get(CONSTANTS.ACCESS_TOKEN_KEY)?.value || "",
  Astro.cookies
);

if (!paymentDetails.success) {
  return Astro.redirect('/admin/payments');
}
---

<DashboardLayout title={`Payment: ${paymentId}`}>
  <PaymentDetailsScreen paymentData={paymentDetails.data} client:load />
</DashboardLayout>
