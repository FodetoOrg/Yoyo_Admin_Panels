
---
import { serverApiService, type ApiResponse } from "@/lib/utils/api";
import DashboardLayout from "../../../../layouts/DashboardLayout.astro";
import RoomDetailsScreen from "./_components/RoomDetailsScreen";
import { CONSTANTS } from "@/lib/utils/constants";
import { UserRole } from "@/lib/utils/auth";

// Check if user has permission
const currentUser = Astro.locals.user;
if (!currentUser || (currentUser.role !== UserRole.SUPER_ADMIN && currentUser.role !== UserRole.HOTEL_ADMIN)) {
  return Astro.redirect('/admin/dashboard');
}

const roomId = Astro.params.roomId;

if (!roomId) {
  return Astro.redirect('/admin/rooms');
}

const roomDetails: ApiResponse<any> = await serverApiService.get(
  `/api/v1/details/rooms/${roomId}`,
  Astro.cookies.get(CONSTANTS.ACCESS_TOKEN_KEY)?.value || "",
  Astro.cookies
);

if (!roomDetails.success) {
  return Astro.redirect('/admin/rooms');
}
---

<DashboardLayout title={`Room: ${roomDetails.data.room.name}`}>
  <RoomDetailsScreen roomData={roomDetails.data} client:load />
</DashboardLayout>
